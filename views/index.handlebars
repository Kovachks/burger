<h1>Eat Da Burger</h1>

<img src="/assets/img/burger.png" alt="">

<div id="mainBody">
    <div id="list">
        <ul id="undevoured">
        {{#each burger}}
            {{#unless this.devoured}}
            <li class="undevouredLi">
                {{this.id}}.
                {{this.burger_name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour It!</button>
                </form>
            </li>
            {{/unless}}
        {{/each}}
        </ul>

        <ul id="devoured">
        {{#each burger}}
            {{#if this.devoured}}
            <li>
                {{this.id}}.
                {{this.burger_name}}
            </li>
            {{/if}}
        {{/each}}
        </ul>
    </div>
    <div id="submitDiv">
        <form class="create-update-form" action="/" method="POST">

        <div class="form-group">
            <input type="text" id="ca" name="name">
        </div>

            <button type="submit">Submit</button>
        </form>

        <h4>Enter a burger you want to eat and click "Submit"!</h4>
    </div>
</div>